{
	"name" : "BPlayer",
	"description" : "Video Player",
	"version" : "0.4.2",
	"manifest_version" : 2,
	"content_security_policy" : "img-src 'self'; object-src 'self'",
	"app" : {
		"background" : {
			"scripts" : ["scripts/background.js"]
		}
	},
	"icons" : {
		"16" : "assets/icon16.png",
		"32" : "assets/icon32.png"
	},
	"file_handlers" : {
	    "video" : {
	        "types": [
	            "video/mp4",
	             "video/ogg"
	        ],
	        "title": "BPlayer"
	    }
	},
	"permissions": [
		"storage",
		"fileSystem",
		"contextMenus",
		"webview",
		"fullscreen"
	]
}
